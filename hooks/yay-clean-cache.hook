[Trigger]
Operation = Upgrade
Operation = Install
Operation = Remove
Type = Package
Target = *

[Action]
Description = Clean Yay cache: Keep only latest version of each AUR package
When = PostTransaction
Exec = /usr/bin/bash -c 'find "$HOME/.cache/yay" -maxdepth 1 -type d -not -path "$HOME/.cache/yay" -exec sh -c "paccache -rvk1 -c {}" \;'
Depends = pacman-contrib
